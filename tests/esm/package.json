{
  "name": "commonjs",
  "version": "1.0.0",
  "main": "esm/main.mjs",
  "license": "MIT",
  "private": true,
  "scripts": {
    "package": "ncc build --source-map --license licenses.txt -m -q --target es2021",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --silent=false --verbose false",
    "pretest": "pnpm build",
    "build": "tsc"
  },
  "type": "module",
  "devDependencies": {
    "@swc/core": "1.13.2",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@vercel/ncc": "^0.36.1",
    "jest": "^30.0.5",
    "source-map-support": "^0.5.21",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "appstore-connect-jwt-generator-core": "link:../../package"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "extensionsToTreatAsEsm": [
      ".ts",
      ".cts",
      ".mts"
    ],
    "moduleFileExtensions": [
      "cts",
      "ts",
      "mts",
      "js",
      "cjs",
      "mjs",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/*.test.ts",
      "**/__tests__/*.test.cts",
      "**/__tests__/*.test.mts"
    ],
    "transform": {
      "^.+\\.m?(t|j)sx?$": [
        "@swc/jest",
        {
          "jsc": {
            "parser": {
              "syntax": "typescript",
              "tsx": false,
              "decorators": true,
              "dynamicImport": true
            },
            "minify": {
              "compress": {
                "unused": true
              },
              "mangle": true
            },
            "target": "es2021",
            "transform": {
              "optimizer": {
                "jsonify": {
                  "minCost": 0
                }
              }
            }
          },
          "minify": true,
          "sourceMaps": true,
          "module": {
            "type": "es6",
            "strict": true,
            "strictMode": true,
            "lazy": true,
            "noInterop": false
          }
        }
      ]
    },
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/ems",
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "verbose": true
  },
  "engines": {
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.14.2+sha512.6e2baf77d06b9362294152c851c4f278ede37ab1eba3a55fda317a4a17b209f4dbb973fb250a77abc463a341fcb1f17f17cfa24091c4eb319cda0d9b84278387"
}
