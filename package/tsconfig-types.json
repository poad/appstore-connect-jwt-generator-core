{
  "extends": ".",
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "rootDir": "./src",
    "outDir": "./@types",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": ["node_modules", "dist", "src/tests",
    "tests"]
}
